{
    "name": "Google Meet On-Air",
    "description": "Capture events when Google Meet goes on and off air.",
    "version": "1.0",
    "manifest_version": 3,
    "background": {
        "service_worker": "background.js"
    },
    "content_scripts": [
        {
            "matches": ["https://meet.google.com/*"],
            "run_at": "document_idle",
            "js": ["onAirClient.js"]
        }
    ],
    "options_page": "options.html",
    "permissions": ["activeTab", "scripting", "storage"],
    "action": {
        "default_popup": "options.html"
    },
    "icons": {
      "16": "/images/logo_on_16.png",
      "32": "/images/logo_on_32.png",
      "48": "/images/logo_on_48.png",
      "128": "/images/logo_on_128.png"
    }
}